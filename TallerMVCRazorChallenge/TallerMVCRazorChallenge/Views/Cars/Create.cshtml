@model Car
@{
    ViewData["Title"] = "Home Page";
}
<h1>Create Car</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post" class="form-horizontal" role="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-12 d-xl-flex">
                 <div class="col-md-6">
                     <div class="form-group">
                        <label asp-for="Make" class="control-label"></label>
                        <input class="form-control" placeholder="Make" asp-for="Make"  autofocus />
                        <span asp-validation-for="Make" class="text-danger"></span>
                    </div>
                </div>
                 <div class="col-md-6">
                     <div class="form-group">
                        <label asp-for="Model" class="control-label"></label>
                        <input asp-for="Model" class="form-control" placeholder="Model" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                </div>
            </div>
           
            <div class="col-md-12 d-xl-flex">
               <div  class="col-md-6">
                     <div class="form-group">
                    <label asp-for="Year" class="control-label"></label>
                    <input asp-for="Year" class="form-control" placeholder="Year"/>
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
               </div>
                <div  class="col-md-6">
                     <div class="form-group">
                    <label asp-for="Doors" class="control-label"></label>
                    <input asp-for="Doors" class="form-control" placeholder="Doors"/>
                    <span asp-validation-for="Doors" class="text-danger"></span>
                </div>
               </div>
            </div>

              <div class="col-md-12 d-xl-flex">
               <div  class="col-md-6">
                     <div class="form-group">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control" placeholder="Color"/>
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
               </div>
                <div  class="col-md-6">
                     <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" placeholder="Price"/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
               </div>
            </div>  
            <div class="form-group">
                 <div class="col-md-offset-2 col-md-5">
                 <input type="submit" value="Create" id="btncreate" class="btn btn-primary" />
            </div>
               
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>